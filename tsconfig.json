{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "esnext"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "CommonJS",
      "typeRoots": [
        "./node_modules/@types"
      ],
      "resolveJsonModule": true,
      "outDir": "./build/",
      "importHelpers": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "preserveConstEnums": true,
      "newLine": "lf",
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "noImplicitThis": false,
      "skipLibCheck": true
    }
}